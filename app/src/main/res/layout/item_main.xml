<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back">

    <TextView
        android:id="@+id/item_nombre"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:text="@string/nombre"
        android:background="@drawable/back"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/item_vendedor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:padding="5dp"
        android:gravity="center_vertical|center"
        android:text="@string/vendedor"
        android:background="@drawable/back"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/item_precio"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="5dp"
        android:gravity="center_vertical|right"
        android:text="@string/precio"
        android:background="@drawable/back"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/item_editar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:onClick="editarItem"
        android:contentDescription="@string/nombre"
        android:background="@drawable/back"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageView
        android:id="@+id/item_borrar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:onClick="borrarItem"
        android:contentDescription="@string/nombre"
        android:background="@drawable/back"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</LinearLayout>